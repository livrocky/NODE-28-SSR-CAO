<%- include('partials/head') %>
    <%- include('partials/nav') %>

        <h2 class="title">News</h2>
        <div class="grid">
            <% if (allArticlesArr?.length) { %>
                <% allArticlesArr.forEach(el=> { %>
                    <div class="card">
                        <h4>
                            <%= el.title %>
                        </h4>
                        <p class="desc">
                            <%= el.description %>
                        </p>
                        <img src=" <%= el.image %> " alt="image">
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p>There is no news</p>
                            <% } %>

        </div>

        </body>

        </html>